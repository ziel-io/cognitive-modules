{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ziel-io.github.io/cognitive-modules/schema/v2.json",
  "title": "Cognitive Module Schema v2",
  "description": "Schema definition for Cognitive Module input/output contracts",
  "type": "object",
  "properties": {
    "input": {
      "type": "object",
      "description": "Input schema for the module",
      "properties": {
        "type": { "const": "object" },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/propertySchema"
          }
        }
      }
    },
    "output": {
      "type": "object",
      "description": "Output schema for the module",
      "required": ["type", "required", "properties"],
      "properties": {
        "type": { "const": "object" },
        "required": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Must include: confidence, rationale"
        },
        "properties": {
          "type": "object",
          "properties": {
            "confidence": {
              "type": "object",
              "properties": {
                "type": { "const": "number" },
                "minimum": { "const": 0 },
                "maximum": { "const": 1 }
              },
              "required": ["type", "minimum", "maximum"]
            },
            "rationale": {
              "type": "object",
              "properties": {
                "type": { "const": "string" }
              },
              "required": ["type"]
            },
            "behavior_equivalence": {
              "type": "object",
              "properties": {
                "type": { "const": "boolean" }
              },
              "description": "Required for code transformation modules"
            }
          },
          "additionalProperties": {
            "$ref": "#/definitions/propertySchema"
          }
        }
      }
    },
    "error": {
      "type": "object",
      "description": "Error response schema",
      "properties": {
        "type": { "const": "object" },
        "required": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["code", "message"]
        },
        "properties": {
          "type": "object",
          "properties": {
            "code": {
              "type": "object",
              "properties": {
                "type": { "const": "string" },
                "enum": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            },
            "message": {
              "type": "object",
              "properties": {
                "type": { "const": "string" }
              }
            },
            "partial": {
              "type": "object",
              "description": "Partial result if available"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "propertySchema": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "integer", "boolean", "array", "object"]
        },
        "description": { "type": "string" },
        "enum": {
          "type": "array",
          "items": { "type": "string" }
        },
        "minimum": { "type": "number" },
        "maximum": { "type": "number" },
        "minLength": { "type": "integer" },
        "maxLength": { "type": "integer" },
        "items": { "$ref": "#/definitions/propertySchema" },
        "properties": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/propertySchema" }
        },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
