{
  "$schema": "https://cognitive-modules.io/schema/v1",
  "input": {
    "type": "object",
    "properties": {
      "tasks": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["id", "title"],
          "properties": {
            "id": { "type": "string" },
            "title": { "type": "string" },
            "description": { "type": "string" },
            "deadline": { "type": "string" },
            "depends_on": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      },
      "criteria": {
        "type": "object",
        "properties": {
          "weight_urgency": { "type": "number" },
          "weight_importance": { "type": "number" },
          "weight_effort": { "type": "number" }
        }
      },
      "constraints": {
        "type": "object",
        "properties": {
          "max_parallel": { "type": "integer" },
          "available_hours": { "type": "number" }
        }
      },
      "$ARGUMENTS": { "type": "string" },
      "query": { "type": "string" }
    }
  },
  "output": {
    "type": "object",
    "required": ["prioritized_tasks", "rationale", "confidence"],
    "properties": {
      "prioritized_tasks": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["rank", "task_id", "priority_score", "quadrant"],
          "properties": {
            "rank": { "type": "integer" },
            "task_id": { "type": "string" },
            "priority_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "quadrant": {
              "type": "string",
              "enum": ["urgent-important", "important", "urgent", "neither"]
            },
            "reasoning": { "type": "string" }
          }
        }
      },
      "dependencies": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "task_id": { "type": "string" },
            "blocked_by": { "type": "array", "items": { "type": "string" } },
            "blocks": { "type": "array", "items": { "type": "string" } }
          }
        }
      },
      "recommendations": {
        "type": "array",
        "items": { "type": "string" }
      },
      "rationale": {
        "type": "object",
        "required": ["decisions"],
        "properties": {
          "decisions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "aspect": { "type": "string" },
                "decision": { "type": "string" },
                "reasoning": { "type": "string" }
              }
            }
          },
          "assumptions": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      }
    },
    "additionalProperties": false
  }
}
