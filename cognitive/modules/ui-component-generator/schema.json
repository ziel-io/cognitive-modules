{
  "$schema": "https://cognitive-modules.dev/schema/v2.2.json",
  "$id": "ui-component-generator",
  "title": "UI Component Generator Schema v2.2",
  
  "meta": {
    "type": "object",
    "required": ["confidence", "risk", "explain"],
    "properties": {
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "description": "代码生成置信度 (0-1)"
      },
      "risk": {
        "type": "string",
        "enum": ["none", "low", "medium", "high"],
        "description": "代码风险等级"
      },
      "explain": {
        "type": "string",
        "maxLength": 280,
        "description": "生成结果简短摘要"
      },
      "trace_id": { "type": "string" },
      "model": { "type": "string" },
      "latency_ms": { "type": "number", "minimum": 0 }
    }
  },

  "input": {
    "type": "object",
    "properties": {
      "component_name": {
        "type": "string",
        "pattern": "^[A-Z][a-zA-Z0-9]*$",
        "description": "组件名称 (PascalCase)"
      },
      "framework": {
        "type": "string",
        "enum": ["react", "vue"],
        "default": "react",
        "description": "目标框架"
      },
      "description": {
        "type": "string",
        "description": "组件功能描述"
      },
      "props": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["name", "type"],
          "properties": {
            "name": { "type": "string" },
            "type": { "type": "string" },
            "required": { "type": "boolean", "default": false },
            "default": { "type": ["string", "number", "boolean", "null"] },
            "description": { "type": "string" }
          }
        },
        "description": "组件属性定义"
      },
      "features": {
        "type": "array",
        "items": { "type": "string" },
        "description": "需要的功能特性"
      },
      "styling": {
        "type": "string",
        "enum": ["tailwind", "css-modules", "styled-components", "inline"],
        "default": "tailwind",
        "description": "样式方案"
      },
      "typescript": {
        "type": "boolean",
        "default": true,
        "description": "是否使用 TypeScript"
      },
      "accessibility": {
        "type": "boolean",
        "default": true,
        "description": "是否包含无障碍支持"
      },
      "query": {
        "type": "string",
        "description": "自然语言需求描述"
      },
      "$ARGUMENTS": {
        "type": "string",
        "description": "CLI 参数 (向后兼容)"
      }
    }
  },

  "data": {
    "type": "object",
    "required": ["component", "rationale", "behavior_equivalence"],
    "properties": {
      "component": {
        "type": "object",
        "required": ["name", "framework", "files"],
        "properties": {
          "name": {
            "type": "string",
            "description": "组件名称"
          },
          "framework": {
            "type": "string",
            "enum": ["react", "vue"],
            "description": "使用的框架"
          },
          "files": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["filename", "content", "language"],
              "properties": {
                "filename": {
                  "type": "string",
                  "description": "文件名"
                },
                "content": {
                  "type": "string",
                  "description": "文件内容"
                },
                "language": {
                  "type": "string",
                  "enum": ["typescript", "javascript", "css", "scss", "vue"],
                  "description": "语言类型"
                }
              }
            },
            "description": "生成的文件列表"
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" },
            "description": "所需依赖包"
          },
          "peer_dependencies": {
            "type": "array",
            "items": { "type": "string" },
            "description": "peer 依赖"
          },
          "usage_example": {
            "type": "string",
            "description": "使用示例代码"
          },
          "props_documentation": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "required": { "type": "boolean" },
                "default": { "type": "string" },
                "description": { "type": "string" }
              }
            },
            "description": "Props 文档"
          }
        }
      },
      "rationale": {
        "type": "string",
        "minLength": 1,
        "description": "详细的设计决策说明"
      },
      "behavior_equivalence": {
        "type": "boolean",
        "description": "代码是否与需求行为一致"
      },
      "warnings": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "message": { "type": "string" },
            "suggestion": { "type": "string" }
          }
        },
        "description": "生成过程中的警告"
      },
      "extensions": {
        "$ref": "#/$defs/extensions"
      }
    }
  },

  "error": {
    "type": "object",
    "required": ["code", "message"],
    "properties": {
      "code": {
        "type": "string",
        "enum": [
          "INSUFFICIENT_INPUT",
          "UNSUPPORTED_FRAMEWORK",
          "CONFLICTING_REQUIREMENTS",
          "COMPLEXITY_EXCEEDED",
          "SCHEMA_VALIDATION_FAILED",
          "INTERNAL_ERROR"
        ]
      },
      "message": { "type": "string" },
      "recoverable": { "type": "boolean" },
      "suggestion": { "type": "string" }
    }
  },

  "$defs": {
    "extensions": {
      "type": "object",
      "properties": {
        "insights": {
          "type": "array",
          "maxItems": 5,
          "items": {
            "type": "object",
            "required": ["text", "suggested_mapping"],
            "properties": {
              "text": { "type": "string" },
              "suggested_mapping": { "type": "string" },
              "evidence": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
