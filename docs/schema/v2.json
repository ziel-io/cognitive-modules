{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ziel-io.github.io/cognitive-modules/schema/v2.json",
  "title": "Cognitive Module Schema v2",
  "description": "Schema definition for Cognitive Module with envelope response format",
  "type": "object",
  "properties": {
    "input": {
      "type": "object",
      "description": "Input schema for the module",
      "properties": {
        "type": { "const": "object" },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/propertySchema"
          }
        }
      }
    },
    "output": {
      "type": "object",
      "description": "Output data schema (wrapped in envelope.data)",
      "required": ["type", "required", "properties"],
      "properties": {
        "type": { "const": "object" },
        "required": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Must include: confidence, rationale"
        },
        "properties": {
          "type": "object",
          "properties": {
            "confidence": {
              "type": "object",
              "properties": {
                "type": { "const": "number" },
                "minimum": { "const": 0 },
                "maximum": { "const": 1 }
              },
              "required": ["type", "minimum", "maximum"]
            },
            "rationale": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": { "const": "string" }
                  },
                  "required": ["type"]
                },
                {
                  "type": "object",
                  "description": "Structured rationale format",
                  "properties": {
                    "type": { "const": "object" },
                    "required": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "properties": {
                      "type": "object",
                      "properties": {
                        "summary": { "$ref": "#/definitions/propertySchema" },
                        "assumptions": { "$ref": "#/definitions/propertySchema" },
                        "blocking_reasons": { "$ref": "#/definitions/propertySchema" }
                      }
                    }
                  }
                }
              ]
            },
            "behavior_equivalence": {
              "type": "object",
              "properties": {
                "type": { "const": "boolean" }
              },
              "description": "Required for code transformation modules"
            }
          },
          "additionalProperties": {
            "$ref": "#/definitions/propertySchema"
          }
        }
      }
    },
    "error": {
      "type": "object",
      "description": "Error response schema (wrapped in envelope.error)",
      "required": ["type", "required", "properties"],
      "properties": {
        "type": { "const": "object" },
        "required": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["code", "message"]
        },
        "properties": {
          "type": "object",
          "properties": {
            "code": {
              "type": "object",
              "required": ["type", "enum"],
              "properties": {
                "type": { "const": "string" },
                "enum": {
                  "type": "array",
                  "items": { "type": "string" },
                  "minItems": 1
                }
              }
            },
            "message": {
              "type": "object",
              "properties": {
                "type": { "const": "string" }
              },
              "required": ["type"]
            }
          },
          "required": ["code", "message"]
        }
      }
    }
  },
  "definitions": {
    "propertySchema": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "integer", "boolean", "array", "object"]
        },
        "description": { "type": "string" },
        "enum": {
          "type": "array",
          "items": { "type": "string" }
        },
        "minimum": { "type": "number" },
        "maximum": { "type": "number" },
        "minLength": { "type": "integer" },
        "maxLength": { "type": "integer" },
        "items": { "$ref": "#/definitions/propertySchema" },
        "properties": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/propertySchema" }
        },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "envelope": {
      "description": "Standard response envelope format",
      "oneOf": [
        {
          "type": "object",
          "description": "Success response",
          "required": ["ok", "data"],
          "properties": {
            "ok": { "const": true },
            "data": { "type": "object" }
          }
        },
        {
          "type": "object",
          "description": "Error response",
          "required": ["ok", "error"],
          "properties": {
            "ok": { "const": false },
            "error": {
              "type": "object",
              "required": ["code", "message"],
              "properties": {
                "code": { "type": "string" },
                "message": { "type": "string" }
              }
            },
            "partial_data": {
              "type": "object",
              "description": "Partial result if failure.partial_allowed is true"
            }
          }
        }
      ]
    }
  }
}
