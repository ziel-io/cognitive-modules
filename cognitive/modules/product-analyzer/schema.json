{
  "$schema": "https://cognitive-modules.dev/schema/v2.2.json",
  
  "meta": {
    "type": "object",
    "required": ["confidence", "risk", "explain"],
    "properties": {
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "description": "分析置信度"
      },
      "risk": {
        "type": "string",
        "enum": ["none", "low", "medium", "high"],
        "description": "基于假设的风险等级"
      },
      "explain": {
        "type": "string",
        "maxLength": 280,
        "description": "简短摘要"
      },
      "trace_id": { "type": "string" },
      "model": { "type": "string" },
      "latency_ms": { "type": "number", "minimum": 0 }
    }
  },

  "input": {
    "type": "object",
    "properties": {
      "$ARGUMENTS": {
        "type": "string",
        "description": "产品描述文本"
      },
      "query": {
        "type": "string",
        "description": "同 $ARGUMENTS"
      }
    }
  },

  "data": {
    "type": "object",
    "required": ["analysis", "recommendations", "rationale"],
    "properties": {
      "analysis": {
        "type": "object",
        "description": "产品分析结果",
        "required": ["product_type", "target_users", "core_features"],
        "properties": {
          "product_type": { "type": "string" },
          "target_users": { 
            "type": "array", 
            "items": { "type": "string" } 
          },
          "core_features": { 
            "type": "array", 
            "items": { "type": "string" } 
          },
          "design_preferences": { "type": "object" }
        }
      },
      "ui_spec": {
        "type": "object",
        "description": "来自子模块的 UI 规范（可选，取决于 @call 是否成功）"
      },
      "recommendations": {
        "type": "array",
        "description": "额外建议",
        "items": {
          "type": "object",
          "required": ["suggestion", "priority", "risk"],
          "properties": {
            "category": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": ["ux", "marketing", "technical", "content", "design"]
                },
                {
                  "type": "object",
                  "required": ["custom", "reason"],
                  "properties": {
                    "custom": { "type": "string", "minLength": 1, "maxLength": 32 },
                    "reason": { "type": "string" }
                  }
                }
              ]
            },
            "suggestion": { "type": "string" },
            "priority": { 
              "type": "string", 
              "enum": ["high", "medium", "low"] 
            },
            "risk": {
              "type": "string",
              "enum": ["none", "low", "medium", "high"]
            }
          }
        }
      },
      "rationale": {
        "type": "string",
        "description": "详细的分析思路说明"
      },
      "extensions": {
        "$ref": "#/$defs/extensions"
      }
    }
  },

  "error": {
    "type": "object",
    "required": ["code", "message"],
    "properties": {
      "code": {
        "type": "string",
        "enum": [
          "INVALID_INPUT",
          "EMPTY_DESCRIPTION",
          "SUBAGENT_FAILED",
          "SCHEMA_VALIDATION_FAILED",
          "INTERNAL_ERROR"
        ]
      },
      "message": { "type": "string" }
    }
  },

  "$defs": {
    "extensions": {
      "type": "object",
      "properties": {
        "insights": {
          "type": "array",
          "maxItems": 10,
          "items": {
            "type": "object",
            "required": ["text"],
            "properties": {
              "text": { "type": "string" },
              "suggested_mapping": { "type": "string" },
              "evidence": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
