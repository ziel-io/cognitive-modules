{
  "$schema": "https://cognitive-modules.dev/schema/v2.2.json",
  
  "meta": {
    "type": "object",
    "required": ["confidence", "risk", "explain"],
    "properties": {
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "description": "Confidence in the review quality"
      },
      "risk": {
        "type": "string",
        "enum": ["none", "low", "medium", "high"],
        "description": "Aggregated risk level from issues"
      },
      "explain": {
        "type": "string",
        "maxLength": 280,
        "description": "Short summary for quick decisions"
      },
      "trace_id": { "type": "string" },
      "model": { "type": "string" },
      "latency_ms": { "type": "number", "minimum": 0 }
    }
  },

  "input": {
    "type": "object",
    "properties": {
      "code": {
        "type": "string",
        "description": "The code to review"
      },
      "language": {
        "type": "string",
        "description": "Programming language"
      },
      "context": {
        "type": "string",
        "description": "Description of code's purpose"
      },
      "focus": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Review focus areas"
      },
      "$ARGUMENTS": { "type": "string" },
      "query": { "type": "string" }
    }
  },

  "data": {
    "type": "object",
    "required": ["issues", "summary", "rationale"],
    "properties": {
      "issues": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["severity", "category", "description", "suggestion", "risk"],
          "properties": {
            "severity": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": ["critical", "high", "major", "medium", "minor", "low", "info"]
                },
                {
                  "type": "object",
                  "required": ["custom", "reason"],
                  "properties": {
                    "custom": { "type": "string", "minLength": 1, "maxLength": 32 },
                    "reason": { "type": "string" }
                  }
                }
              ],
              "description": "Issue severity - predefined or custom"
            },
            "category": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": ["correctness", "security", "performance", "readability", "maintainability"]
                },
                {
                  "type": "object",
                  "required": ["custom", "reason"],
                  "properties": {
                    "custom": { "type": "string", "minLength": 1, "maxLength": 32 },
                    "reason": { "type": "string" }
                  }
                }
              ],
              "description": "Issue category - predefined or custom"
            },
            "location": {
              "type": "string",
              "description": "Location in code (line number or function name)"
            },
            "description": {
              "type": "string",
              "description": "What the issue is"
            },
            "suggestion": {
              "type": "string",
              "description": "How to fix it"
            },
            "risk": {
              "type": "string",
              "enum": ["none", "low", "medium", "high"],
              "description": "Risk level if not fixed"
            }
          }
        }
      },
      "highlights": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Positive aspects of the code"
      },
      "summary": {
        "type": "string",
        "description": "Overall assessment"
      },
      "rationale": {
        "type": "string",
        "description": "Detailed explanation of review methodology and decisions"
      },
      "extensions": {
        "$ref": "#/$defs/extensions"
      }
    }
  },

  "error": {
    "type": "object",
    "required": ["code", "message"],
    "properties": {
      "code": {
        "type": "string",
        "enum": [
          "PARSE_ERROR",
          "UNSUPPORTED_LANGUAGE",
          "NO_CODE_PROVIDED",
          "SCHEMA_VALIDATION_FAILED",
          "INTERNAL_ERROR"
        ]
      },
      "message": { "type": "string" }
    }
  },

  "$defs": {
    "extensions": {
      "type": "object",
      "description": "Overflow container for insights that don't fit the schema",
      "properties": {
        "insights": {
          "type": "array",
          "maxItems": 5,
          "items": {
            "type": "object",
            "required": ["text", "suggested_mapping"],
            "properties": {
              "text": { "type": "string" },
              "suggested_mapping": { "type": "string" },
              "evidence": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
