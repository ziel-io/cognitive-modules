{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ziel-io.github.io/cognitive-modules/schema/v1.json",
  "title": "Cognitive Module Schema v1",
  "description": "Schema definition for Cognitive Module input/output contracts (legacy format)",
  "type": "object",
  "properties": {
    "input": {
      "type": "object",
      "description": "Input schema for the module",
      "properties": {
        "type": { "const": "object" },
        "properties": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "output": {
      "type": "object",
      "description": "Output schema for the module",
      "properties": {
        "type": { "const": "object" },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        },
        "properties": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
