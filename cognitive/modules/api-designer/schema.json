{
  "$schema": "https://cognitive-modules.dev/schema/v2.2.json",
  
  "meta": {
    "type": "object",
    "required": ["confidence", "risk", "explain"],
    "properties": {
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "description": "设计置信度"
      },
      "risk": {
        "type": "string",
        "enum": ["none", "low", "medium", "high"],
        "description": "设计复杂性风险"
      },
      "explain": {
        "type": "string",
        "maxLength": 280,
        "description": "简短摘要"
      },
      "trace_id": { "type": "string" },
      "model": { "type": "string" },
      "latency_ms": { "type": "number", "minimum": 0 }
    }
  },

  "input": {
    "type": "object",
    "properties": {
      "resource": {
        "type": "string",
        "description": "资源名称"
      },
      "operations": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["create", "read", "update", "delete", "list", "search", "batch"]
            },
            {
              "type": "object",
              "required": ["custom", "reason"],
              "properties": {
                "custom": { "type": "string" },
                "reason": { "type": "string" }
              }
            }
          ]
        }
      },
      "relationships": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "resource": { "type": "string" },
            "type": { 
              "type": "string", 
              "enum": ["one-to-one", "one-to-many", "many-to-one", "many-to-many"] 
            }
          }
        }
      },
      "auth_required": { "type": "boolean" },
      "version": { "type": "string" },
      "$ARGUMENTS": { "type": "string" },
      "query": { "type": "string" }
    }
  },

  "data": {
    "type": "object",
    "required": ["endpoints", "rationale"],
    "properties": {
      "endpoints": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["method", "path", "description", "risk"],
          "properties": {
            "method": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS"]
                },
                {
                  "type": "object",
                  "required": ["custom", "reason"],
                  "properties": {
                    "custom": { "type": "string", "minLength": 1, "maxLength": 32 },
                    "reason": { "type": "string" }
                  }
                }
              ]
            },
            "path": { "type": "string" },
            "description": { "type": "string" },
            "auth_required": { "type": "boolean" },
            "request": {
              "type": "object",
              "properties": {
                "headers": { "type": "object" },
                "params": { "type": "object" },
                "query": { "type": "object" },
                "body": { "type": "object" }
              }
            },
            "response": {
              "type": "object",
              "properties": {
                "body": { "type": "object" },
                "headers": { "type": "object" }
              }
            },
            "status_codes": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "code": { "type": "integer" },
                  "description": { "type": "string" }
                }
              }
            },
            "risk": {
              "type": "string",
              "enum": ["none", "low", "medium", "high"],
              "description": "该端点的风险等级"
            }
          }
        }
      },
      "common": {
        "type": "object",
        "properties": {
          "authentication": { "type": "object" },
          "pagination": { "type": "object" },
          "error_format": { "type": "object" }
        }
      },
      "examples": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "endpoint": { "type": "string" },
            "request": { "type": "object" },
            "response": { "type": "object" }
          }
        }
      },
      "rationale": {
        "type": "string",
        "description": "详细的设计思路说明"
      },
      "extensions": {
        "$ref": "#/$defs/extensions"
      }
    }
  },

  "error": {
    "type": "object",
    "required": ["code", "message"],
    "properties": {
      "code": {
        "type": "string",
        "enum": [
          "INVALID_INPUT",
          "NO_RESOURCE",
          "CONFLICTING_REQUIREMENTS",
          "SCHEMA_VALIDATION_FAILED",
          "INTERNAL_ERROR"
        ]
      },
      "message": { "type": "string" }
    }
  },

  "$defs": {
    "extensions": {
      "type": "object",
      "properties": {
        "insights": {
          "type": "array",
          "maxItems": 5,
          "items": {
            "type": "object",
            "required": ["text", "suggested_mapping"],
            "properties": {
              "text": { "type": "string" },
              "suggested_mapping": { "type": "string" },
              "evidence": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
