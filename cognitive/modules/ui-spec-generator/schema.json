{
  "$schema": "https://ziel-io.github.io/cognitive-modules/schema/v1.json",
  "$id": "ui-spec-generator",
  "title": "UI Spec Generator Schema",
  
  "input": {
    "type": "object",
    "required": ["page_context", "features"],
    "properties": {
      "page_context": {
        "type": "object",
        "required": ["page_type", "purpose", "target_audience"],
        "properties": {
          "page_type": { "type": "string" },
          "purpose": { "type": "string" },
          "target_audience": { "type": "array", "items": { "type": "string" } },
          "platform": { "type": "string" }
        }
      },
      "features": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["name", "description", "priority"],
          "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" },
            "priority": { "type": "string" },
            "user_stories": { "type": "array", "items": { "type": "string" } }
          }
        }
      },
      "content_requirements": {
        "type": "object",
        "properties": {
          "sections": { "type": "array" },
          "copy_guidelines": { "type": "object" }
        }
      },
      "design_tokens": { "type": "object" },
      "constraints": { "type": "object" },
      "existing_patterns": { "type": "array" }
    }
  },

  "output": {
    "type": "object",
    "required": ["specification", "rationale", "confidence"],
    "properties": {
      "specification": {
        "type": "object",
        "required": [
          "information_architecture",
          "components", 
          "interactions",
          "responsive",
          "accessibility",
          "design_tokens",
          "acceptance_criteria"
        ],
        "properties": {
          "information_architecture": {
            "type": "object",
            "required": ["sections", "hierarchy"]
          },
          "components": {
            "type": "array",
            "minItems": 1
          },
          "interactions": {
            "type": "array"
          },
          "responsive": {
            "type": "object",
            "required": ["breakpoints", "layout_rules"]
          },
          "accessibility": {
            "type": "object",
            "required": ["level", "requirements"]
          },
          "design_tokens": {
            "type": "object",
            "required": ["status"]
          },
          "acceptance_criteria": {
            "type": "array",
            "minItems": 1
          }
        }
      },
      "rationale": {
        "type": "object",
        "required": ["decisions"],
        "properties": {
          "decisions": {
            "type": "array",
            "minItems": 1
          },
          "assumptions": { "type": "array" },
          "open_questions": { "type": "array" }
        }
      },
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      },
      "confidence_breakdown": {
        "type": "object"
      }
    }
  }
}
