{
  "$schema": "https://cognitive-modules.dev/schema/v2.2.json",
  
  "meta": {
    "type": "object",
    "required": ["confidence", "risk", "explain"],
    "properties": {
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "description": "排序置信度"
      },
      "risk": {
        "type": "string",
        "enum": ["none", "low", "medium", "high"],
        "description": "基于不确定性的风险等级"
      },
      "explain": {
        "type": "string",
        "maxLength": 280,
        "description": "简短摘要"
      },
      "trace_id": { "type": "string" },
      "model": { "type": "string" },
      "latency_ms": { "type": "number", "minimum": 0 }
    }
  },

  "input": {
    "type": "object",
    "properties": {
      "tasks": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["id", "title"],
          "properties": {
            "id": { "type": "string" },
            "title": { "type": "string" },
            "description": { "type": "string" },
            "deadline": { "type": "string" },
            "depends_on": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      },
      "criteria": {
        "type": "object",
        "properties": {
          "weight_urgency": { "type": "number" },
          "weight_importance": { "type": "number" },
          "weight_effort": { "type": "number" }
        }
      },
      "constraints": {
        "type": "object",
        "properties": {
          "max_parallel": { "type": "integer" },
          "available_hours": { "type": "number" }
        }
      },
      "$ARGUMENTS": { "type": "string" },
      "query": { "type": "string" }
    }
  },

  "data": {
    "type": "object",
    "required": ["prioritized_tasks", "rationale"],
    "properties": {
      "prioritized_tasks": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["rank", "task_id", "priority_score", "quadrant", "risk"],
          "properties": {
            "rank": { "type": "integer" },
            "task_id": { "type": "string" },
            "priority_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "quadrant": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": ["urgent-important", "important", "urgent", "neither"]
                },
                {
                  "type": "object",
                  "required": ["custom", "reason"],
                  "properties": {
                    "custom": { "type": "string", "minLength": 1, "maxLength": 32 },
                    "reason": { "type": "string" }
                  }
                }
              ]
            },
            "reasoning": { "type": "string" },
            "risk": {
              "type": "string",
              "enum": ["none", "low", "medium", "high"]
            }
          }
        }
      },
      "dependencies": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "task_id": { "type": "string" },
            "blocked_by": { "type": "array", "items": { "type": "string" } },
            "blocks": { "type": "array", "items": { "type": "string" } }
          }
        }
      },
      "recommendations": {
        "type": "array",
        "items": { "type": "string" }
      },
      "rationale": {
        "type": "string",
        "description": "详细的排序思路说明"
      },
      "extensions": {
        "$ref": "#/$defs/extensions"
      }
    }
  },

  "error": {
    "type": "object",
    "required": ["code", "message"],
    "properties": {
      "code": {
        "type": "string",
        "enum": [
          "INVALID_INPUT",
          "NO_TASKS",
          "CIRCULAR_DEPENDENCY",
          "SCHEMA_VALIDATION_FAILED",
          "INTERNAL_ERROR"
        ]
      },
      "message": { "type": "string" }
    }
  },

  "$defs": {
    "extensions": {
      "type": "object",
      "properties": {
        "insights": {
          "type": "array",
          "maxItems": 5,
          "items": {
            "type": "object",
            "required": ["text", "suggested_mapping"],
            "properties": {
              "text": { "type": "string" },
              "suggested_mapping": { "type": "string" },
              "evidence": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
